<% provide(:title, 'All users') %>
<h1>All users</h1>


<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>

      <%= link_to user.name, user %>
       <% if current_user.admin? %>
       | <%= link_to "Edit", edit_user_path(user) %>
    | <%= link_to "Delete", user, method: :delete,
                                  data: { confirm: "Are you sure?" } %>
  <% end %>

    </li>
  <% end %>
</ul>

<%= will_paginate %>
